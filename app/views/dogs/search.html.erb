<h3>Find the Perfect Pet</h3>
<form action="<%= dogs_path %>" method="GET" class="preferences large-6 small-10 columns">
  <fieldset>
    <legend>Pet Preferences:</legend>
      <label>Breed:</label>
      <select name="dog[breed]">
          <option value=""></option>
        <%= Dog::BREEDS.each do |breed| %>
          <option value="<%= breed %>"><%= breed %></option>
        <% end %>
      </select>
      <hr />
      <label>Size:</label>
      <select name="dog[size]">
        <option value=""></option>
        <option value="small">Small</option>
        <option value="medium">Medium</option>
        <option value="large">Large</option>
      </select>
      <hr />
        <label>Kids:</label>
        <input type="radio" name="dog[kids]" id="kidtest" value="true">True
        <input type="radio" name="dog[kids]" value="false">False
      <hr />
      <label>Max Age:</label>
      <input type="text" name="dog[age]">
      <label>Gender:</label>
      <input type="radio" name="dog[gender]" id="sextest" value="male">Male
      <input type="radio" name="dog[gender]" value="female">Female
      <hr />
      <label>Fixed:</label>
      <input type="radio" name="dog[fixed]" id="fixedtest" value="true">True
      <input type="radio" name="dog[fixed]" value="false">False
    </br>
    <input class="button tiny round expand" type="submit" value="Submit">
  </fieldset>
</form>
