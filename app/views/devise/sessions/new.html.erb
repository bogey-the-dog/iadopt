<div class="main-page-image-box large-centered small-centered columns">
  <img class="main-page-image" src="/black_logo.png">
</div>
<div class="form-background large-4 medium-6 small-8 large-centered medium-centered small-centered columns">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: "form-title" %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :password, class: "form-title" %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class: "button tiny radius" %>
    </div>
  <% end %>

  <span class="sign-in-links"><%= render "devise/shared/links" %></span>
</div>
