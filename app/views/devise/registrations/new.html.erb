<div class="preferences large-6 small-12 large-centered small-centered columns">
<fieldset>
  <legend>Sign Up</legend>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "input-field" %>
      </div>

      <div class="field">
        <%= f.label :username %>
        <%= f.text_field :username, class: "input-field" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "input-field" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "input-field" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "button-dark-blue button tiny round" %>
      </div>
    <% end %>

    <%= link_to "Already have an account?", root_path, class: "form-title" %>
  </fieldset>
</div>
