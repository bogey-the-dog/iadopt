<div class="home-container row">
  <div class="large-6 columns">
    <img src="/dog4.jpg"><br>
    <div class="panel">
      <% if current_user.shelters.present? %>
        Manage Your Shelter(s):
        <% current_user.shelters.each do |shelter| %>
        </br>
          <%= link_to shelter.name, shelter_path(shelter.id) %>
        <% end %>
      <% else %>
        <p>Content Shown When User Has No Shelters To Manage</p>
      <% end %>
