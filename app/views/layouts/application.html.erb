<!DOCTYPE html>
<html>
<head>
  <title>Iadopt</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Droid+Sans' rel='stylesheet' type='text/css'>
</head>
<body>
  <%- flash.each do |key, value| -%>
    <% if key == 'notice' %>
      <div class="alert-box success radius flash-<%= key %>">
        <%= value %>
      </div>
    <% else %>
      <div class="alert-box alert radius flash-<%= key %>">
        <%= value %>
      </div>
    <% end %>
  <%- end -%>
  <%= render "layouts/topbar" %>
  <%= yield %>

  <%= javascript_include_tag 'application' %>
  <%= yield :extra_footer %>
</body>
</html>
